{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "downlevelIteration": true,
    "noImplicitUseStrict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.esm.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*"],
  "skipLibCheck": true
}
