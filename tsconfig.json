{
  "compilerOptions": {
    "baseUrl": "./dist/",
    "outDir": "./dist/",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src/",
    "noImplicitAny": true,
    "module": "umd",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.esm.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "skipLibCheck": true
}
