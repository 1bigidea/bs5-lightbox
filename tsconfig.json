{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "allowJs": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.esm.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "skipLibCheck": true
}
